{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem:</h4>
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título: </label>
            <input type="text" name='titulo' class="form-control" required><br>
            
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" placeholder="titulo-do-seu-post" required><br>
            
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required><br>

            <label for="descricao">Resumo: </label>
            <input type="text" name="resumo" class="form-control" maxlength="300" required><br>
            
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control" required></textarea><br>
            
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>
            
            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>