{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem:</h4>
        <form action="/admin/postagens/edit" method="post">
        <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Título: </label>
            <input type="text" name='titulo' class="form-control" required value="{{postagem.titulo}}">
            
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required value="{{postagem.slug}}">
            
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" required value="{{postagem.descricao}}">
            
            <label for="resumo">Resumo: </label>
            <textarea name="resumo" class="form-control" maxlength="300" required value="{{postagem.resumo}}"></textarea>

            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>
            
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>